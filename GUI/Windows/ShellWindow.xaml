<Window x:Class="TinTin.GUI.Windows.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="600"
        Width="800"
        Icon="pack://application:,,,/tt;component/Resources/Icons/project.ico"
        Loaded="Window_Loaded"
        Closed="Window_Closed">
    <Grid Background="#E4E4E4" ForceCursor="True">
        <Grid VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10">
           <Label x:Name="LblAssemblyVersion" Content="Version:" Opacity="0.3" HorizontalContentAlignment="Right" Background="{x:Null}" Foreground="Red" FontFamily="Monotype Corsiva" FontSize="26" VerticalAlignment="Bottom"/>
        </Grid>
        <Border Name="PluginContentBorder" Margin="10,70,10,10" BorderThickness="1" BorderBrush="Black" Background="SlateGray">
            <Grid Name="PluginContent" />
        </Border>
    </Grid>
</Window>